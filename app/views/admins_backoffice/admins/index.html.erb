<h1>Listando Administradores</h1>

<div class="card shadow mb-4">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
          <thead>
              <tr>
                  <th>#</th>
                  <th>Email</th>
                  <th><%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
                  <i class="fa fa-plus"></i>
                  <% end %></th>
              </tr>
          </thead>
          <tbody>
            <% @admins.each do |admin| %>
              <tr role="row" class="odd">
                <td class=""> <%= admin.id %></td>
                <td class="sorting_1"><%= admin.email %></td>
                <td style="width: 110px">
                  <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                  <% end %>

                  <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: "Deseja realmente excluir esse administrador?" } do %>
                    <i class="fa fa-minus"></i>
                  <% end %>
                </td>
            <% end %>
          </tbody>
      </table>
      <div class="pagination justify-content-center">
        <%= paginate @admins %>
      </div>
    </div>
  </div>
</div>

