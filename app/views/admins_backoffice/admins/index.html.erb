<h1>Listando Administradores</h1>

<div class="card shadow mb-4">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
          <thead>
              <tr>
                  <th>#</th>
                  <th>Email</th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
            <% @admins.each do |admin| %>
              <tr role="row" class="odd">
                <td class=""> <%= admin.id %></td>
                <td class="sorting_1"><%= admin.email %></td>
                <td style="width: 110px">
                  <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                  <% end %>
                  <button type="button" class="btn btn-danger btn-circle"><i class="fa fa-minus"></i></button>
                </td>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>
