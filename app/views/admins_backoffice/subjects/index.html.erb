<h1><%= t('messages.listing', model: @subjects.model_name.human(count: 2)) %></h1>

<div class="card shadow mb-4">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
          <thead>
              <tr>
                  <th>#</th>
                  <th><%= translate_attr(@subjects, :description) %></th>
                  <th><%= link_to new_admins_backoffice_subject_path, class:"btn btn-success btn-circle" do %>
                  <i class="fa fa-plus"></i>
                  <% end %></th>
              </tr>
          </thead>
          <tbody>
            <% @subjects.each do |subject| %>
              <tr role="row" class="odd">
                <td class=""> <%= subject.id %></td>
                <td class="sorting_1"><%= subject.description %></td>
                <td style="width: 110px">
                  <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                  <% end %>

                  <%= link_to admins_backoffice_subject_path(subject), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: t('messages.confirm_with', item: subject.description) } do %>
                    <i class="fa fa-minus"></i>
                  <% end %>
                </td>
            <% end %>
          </tbody>
      </table>
      <div class="pagination justify-content-center">
        <%= paginate @subjects %>
      </div>
    </div>
  </div>
</div>

